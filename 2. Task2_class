package ru.geekbrains.lesson6.testing;

import java.util.ArrayList;
import java.util.List;

public class Task2 {
    /**
     * Задание 2:
     * Написать метод, которому в качестве аргумента передается не пустой одномерный целочисленный массив.
     * Метод должен вернуть новый массив, который получен путем вытаскивания из исходного массива элементов,
     * идущих после последней четверки. Входной массив должен содержать хотя бы одну четверку, иначе в методе
     * необходимо выбросить RuntimeException. Написать набор тестов для этого метода (по 3-4 варианта входных данных).
     * Вх: [ 1 2 4 4 2 3 4 1 7 ] -> вых: [ 1 7 ].
     */


    public Integer[] getAllAfter (Integer[] searchArr, int searchBorderInt) throws RuntimeException {
        List<Integer> lt = new ArrayList<Integer>();

        int searchInt = -1;

        for (int i = searchArr.length - 1; i >= 0; i--) {
            if (searchArr[i] == searchBorderInt) {
                searchInt = i;
            }
        }

        if (searchInt == -1) {
            throw new RuntimeException();
        } else if (searchInt == searchArr.length - 1) {

        } else {
            for (int i = searchInt + 1; i < searchArr.length; i++) {
                lt.add(searchArr[i]);
            }
        }

        return lt.toArray(new Integer[lt.size()]);
    }
}
