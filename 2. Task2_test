package ru.geekbrains.lesson6.testing;

import org.junit.After;
import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.junit.runners.Parameterized;

import java.util.Arrays;
import java.util.Collection;

import static org.junit.Assert.*;

@RunWith(value = Parameterized.class)
public class Task2Test {
    private static Task2 tsk2 = null;
    private static Integer [] res = {1, 2, 3};
    private static Integer[] searchArr;
    private static Integer searchBorderInt;

    public Task2Test(Integer[] searchArr, Integer searchBorderInt) {
        this.searchArr = searchArr;
        this.searchBorderInt = searchBorderInt;
    }

    @Before
    public void setUp() {
        tsk2 = new Task2();
        System.out.println("init suit");
    }

    @Parameterized.Parameters
    public static Collection testParameters() {
        Integer [] test1 = {1, 2, 4, 1, 2, 3};
        Integer [] test2 = {1, 2, 3, 4, 1, 2, 3, 9};
        Integer [] test3 = {4, 1, 2, 3};
        Integer [] test4 = {1, 2, 3, 0, 1, 4};


        return Arrays.asList(
                new Object[][]{
                        {test1, 4},
                        {test2, 4},
                        {test3, 4},
                        {test4, 4}
                }
        );
    }

    @Test
    public void testTask2() {
        Assert.assertArrayEquals(res, tsk2.getAllAfter(searchArr, searchBorderInt));
    }

    @After
    public void tearDown() throws Exception {
        tsk2 = null;
    }

}
